

<div class="text-gray-800 flex items-center justify-center">
    <!-- Wrapper -->
    <div class="text-center space-y-6 p-8 bg-white rounded-lg shadow-lg max-w-lg">
        <!-- Error Icon -->
        <div class="flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-red-500" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10 14l2-2m0 0l2-2m-2 2h.01M12 2a10 10 0 1010 10A10 10 0 0012 2z" />
            </svg>
        </div>
    
        <!-- Message -->
        <h1 class="text-4xl font-extrabold text-red-600">500 - Server Error</h1>
        <p class="text-lg text-gray-600">Oops!.</p>
        <p class="text-lg text-gray-600"><%= message %>.</p>
    
        <!-- Actions -->
        <div class="space-x-4">
            <a href="/" class="px-6 py-2 text-white bg-red-600 rounded hover:bg-red-700 transition">
                Ir a Inicio
            </a>
        </div>
    </div>
</div>

