
    <section>
        <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">AGREGAR PAÍS</h2>
        <form class="bg-white shadow-lg rounded-lg p-6">
            <!-- Campos básicos -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label for="common-name" class="block text-sm font-medium text-gray-700">Nombre Común</label>
                    <input type="text" id="common-name" class="mt-1 block w-full rounded shadow-lg">
                </div>
                <div>
                    <label for="official-name" class="block text-sm font-medium text-gray-700">Nombre
                        Oficial</label>
                    <input type="text" id="official-name" class="mt-1 block w-full rounded shadow-lg">
                </div>
                <div>
                    <label for="capital" class="block text-sm font-medium text-gray-700">Capital</label>
                    <input type="text" id="capital" class="mt-1 block w-full rounded shadow-lg">
                </div>
                <div>
                    <label for="region" class="block text-sm font-medium text-gray-700">Región</label>
                    <input type="text" id="region" class="mt-1 block w-full rounded shadow-lg">
                </div>
                <div>
                    <label for="subregion" class="block text-sm font-medium text-gray-700">Subregión</label>
                    <input type="text" id="subregion" class="mt-1 block w-full rounded shadow-lg">
                </div>
                <div>
                    <label for="population" class="block text-sm font-medium text-gray-700">Población</label>
                    <input type="number" id="population" class="mt-1 block w-full rounded shadow-lg">
                </div>
                <div>
                    <label for="area" class="block text-sm font-medium text-gray-700">Área (km²)</label>
                    <input type="number" id="area" class="mt-1 block w-full rounded shadow-lg">
                </div>
                <div>
                    <label for="independent" class="block text-sm font-medium text-gray-700">Independiente</label>
                    <select id="independent" class="mt-1 block w-full rounded shadow-lg">
                        <option value="true">Sí</option>
                        <option value="false">No</option>
                    </select>
                </div>
            </div>

            <!-- Idiomas -->
            <div class="mt-4">
                <label for="languages" class="block text-sm font-medium text-gray-700">Idiomas</label>
                <input type="text" id="languages" placeholder="Ejemplo: Español, Guaraní"
                    class="mt-1 block w-full rounded shadow-lg">
            </div>

            <!-- Moneda -->
            <div class="mt-4">
                <label for="currency" class="block text-sm font-medium text-gray-700">Moneda</label>
                <div class="grid grid-cols-2 gap-4">
                    <input type="text" id="currency-name" placeholder="Nombre (Ejemplo: Peso argentino)"
                        class="mt-1 block w-full rounded shadow-lg">
                    <input type="text" id="currency-symbol" placeholder="Símbolo (Ejemplo: $)"
                        class="mt-1 block w-full rounded shadow-lg">
                </div>
            </div>

            <!-- Coordenadas -->
            <div class="mt-4 grid grid-cols-2 gap-4">
                <div>
                    <label for="latitude" class="block text-sm font-medium text-gray-700">Latitud</label>
                    <input type="number" id="latitude" class="mt-1 block w-full rounded shadow-lg">
                </div>
                <div>
                    <label for="longitude" class="block text-sm font-medium text-gray-700">Longitud</label>
                    <input type="number" id="longitude" class="mt-1 block w-full rounded shadow-lg">
                </div>
            </div>

            <!-- Botones -->
            <div class="mt-6 flex justify-end">
                <button type="reset"
                    class="bg-yellow-300 text-yellow-800 px-4 py-2 rounded hover:bg-yellow-400 mr-2">Limpiar</button>
                <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Agregar
                    País</button>
            </div>
        </form>
    </section>
